# Test environment configuration
# This file is used specifically for testing to prevent hanging issues

# Disable agent system during testing to prevent initialization hanging
AGENT_SYSTEM_ENABLED=false

# Enable tool system for testing
TOOL_SYSTEM_ENABLED=true

# Use a mock API key for testing
OPENROUTER_API_KEY=test-key-integration

# Set environment to testing
ENVIRONMENT=testing

# Enable debug mode for better error reporting
DEBUG=true

# Disable Gradio during testing to prevent UI initialization issues
GRADIO_ENABLED=false

# Use localhost for testing
HOST=127.0.0.1
PORT=8000

# Disable multi-writer system during testing
MULTI_WRITER_ENABLED=false

# Set shorter timeouts for testing
LLM_TIMEOUT=10
GRADIO_TIMEOUT=30