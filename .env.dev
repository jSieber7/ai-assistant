# =============================================================================
# AI Assistant Development Environment Configuration
# =============================================================================
# This file is used for development and doesn't require API keys for startup
# The app will start healthy with mock responses when API keys are missing

# =============================================================================
# DEVELOPMENT: LLM Provider Configuration (Optional for startup)
# =============================================================================
# Leave these empty to use mock LLM responses in development
OPENAI_COMPATIBLE_ENABLED=true
OPENAI_COMPATIBLE_API_KEY=
OPENAI_COMPATIBLE_BASE_URL=https://openrouter.ai/api/v1
OPENAI_COMPATIBLE_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# =============================================================================
# DEVELOPMENT: Local LLM with Ollama (Optional)
# =============================================================================
OLLAMA_SETTINGS_ENABLED=true
OLLAMA_SETTINGS_BASE_URL=http://host.docker.internal:11434
OLLAMA_SETTINGS_DEFAULT_MODEL=llama2

# =============================================================================
# DEVELOPMENT: Multi-Writer System (Optional)
# =============================================================================
MULTI_WRITER_ENABLED=false

# =============================================================================
# REQUIRED: Security Configuration
# =============================================================================
SECRET_KEY=dev-secret-key-change-in-production

# =============================================================================
# REQUIRED: SearXNG Configuration
# =============================================================================
SEARXNG_SECRET_KEY=dev-searxng-secret-key

# =============================================================================
# DEVELOPMENT: Firecrawl Configuration (Optional)
# =============================================================================
FIRECRAWL_DEPLOYMENT_MODE=docker
FIRECRAWL_BULL_AUTH_KEY=dev-firecrawl-key

# =============================================================================
# DEVELOPMENT: Jina AI Reranker Configuration (Optional)
# =============================================================================
JINA_API_KEY=
JINA_RERANKER_ENABLED=false

# =============================================================================
# DEVELOPMENT: System Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
DEBUG=true
RELOAD=true

# =============================================================================
# DEVELOPMENT: Feature Toggles
# =============================================================================
TOOL_SYSTEM_ENABLED=true
AGENT_SYSTEM_ENABLED=true
GRADIO_ENABLED=true

# =============================================================================
# Postgres
# =============================================================================
POSTGRES_PASSWORD=dev-password
DATABASE_URL=postgresql://postgres:dev-password@postgres:5432/ai_assistant
JWT_SECRET=dev-jwt-secret