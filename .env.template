# .env.template

# =============================================================================
# OpenAI-Compatible API Configuration (Primary LLM Provider)
# =============================================================================
# New generic configuration (recommended)
OPENAI_COMPATIBLE_ENABLED=true
OPENAI_COMPATIBLE_API_KEY=your_api_key_here
OPENAI_COMPATIBLE_BASE_URL=https://openrouter.ai/api/v1
OPENAI_COMPATIBLE_DEFAULT_MODEL=anthropic/claude-3.5-sonnet
OPENAI_COMPATIBLE_PROVIDER_NAME=OpenRouter  # Auto-detected if not specified
# OPENAI_COMPATIBLE_CUSTOM_HEADERS={}  # JSON format for custom headers
# OPENAI_COMPATIBLE_TIMEOUT=30
# OPENAI_COMPATIBLE_MAX_RETRIES=3

# =============================================================================
# OpenRouter Configuration (Backward Compatibility)
# =============================================================================
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Model Configuration
DEFAULT_MODEL=anthropic/claude-3.5-sonnet
ROUTER_MODEL=deepseek/deepseek-chat
LOGIC_MODEL=anthropic/claude-3.5-sonnet
HUMAN_INTERFACE_MODEL=anthropic/claude-3.5-sonnet

# LLM Provider Configuration
PREFERRED_PROVIDER=openai_compatible  # "openai_compatible", "ollama", or "auto"
ENABLE_FALLBACK=true  # Fall back to other providers if preferred fails

# =============================================================================
# Ollama Configuration 
# =============================================================================
OLLAMA_SETTINGS_BASE_URL=http://localhost:11434
OLLAMA_SETTINGS_ENABLED=true
OLLAMA_SETTINGS_DEFAULT_MODEL=llama2
OLLAMA_SETTINGS_TIMEOUT=30
OLLAMA_SETTINGS_TEMPERATURE=0.7
OLLAMA_SETTINGS_MAX_TOKENS=
OLLAMA_SETTINGS_STREAMING=true
OLLAMA_SETTINGS_HEALTH_CHECK_INTERVAL=60
OLLAMA_SETTINGS_AUTO_HEALTH_CHECK=true

# =============================================================================
# FastAPI Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
DEBUG=true
RELOAD=true

# =============================================================================
# Future Phases Configuration
# =============================================================================

# Database
POSTGRES_URL=postgresql://postgres:password@localhost:5432/langchain_agent_hub

# OpenAI
OPENAI_API_KEY=your_openai_key_for_embeddings

# SearXNG
SEARXNG_URL=http://localhost:8080

# Security
SECRET_KEY=your_secret_key_generate_a_long_random_string