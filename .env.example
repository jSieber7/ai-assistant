# =============================================================================
# AI Assistant Environment Configuration Template
# =============================================================================
# Copy this file to .env and customize for your environment

# =============================================================================
# REQUIRED: LLM Provider Configuration
# =============================================================================

# OpenAI-Compatible API Configuration (Primary LLM Provider)
# Required for the application to function
OPENAI_COMPATIBLE_ENABLED=true
OPENAI_COMPATIBLE_API_KEY=your_api_key_here
OPENAI_COMPATIBLE_BASE_URL=https://openrouter.ai/api/v1
OPENAI_COMPATIBLE_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# =============================================================================
# OPTIONAL: Local LLM with Ollama
# =============================================================================
# Only needed if you want to use local models with Ollama
OLLAMA_SETTINGS_ENABLED=false
OLLAMA_SETTINGS_BASE_URL=http://localhost:11434
OLLAMA_SETTINGS_DEFAULT_MODEL=llama2

# =============================================================================
# OPTIONAL: Multi-Writer System
# =============================================================================
# Only needed if you want to enable the multi-writer/checker system
MULTI_WRITER_ENABLED=false

# =============================================================================
# REQUIRED: Security Configuration
# =============================================================================
# Change this to a random string in production
SECRET_KEY=change_this_to_a_long_random_string_in_production

# =============================================================================
# REQUIRED: SearXNG Configuration
# =============================================================================
# Required for web search functionality
SEARXNG_SECRET_KEY=change-this-to-a-random-secret-key-for-searxng

# =============================================================================
# OPTIONAL: Firecrawl Configuration (Docker-Only)
# =============================================================================
# Only needed if using the firecrawl profile
FIRECRAWL_DEPLOYMENT_MODE=docker
FIRECRAWL_BULL_AUTH_KEY=change_me_firecrawl

# =============================================================================
# OPTIONAL: Jina AI Reranker Configuration
# =============================================================================
# Only needed if using the jina-reranker profile
JINA_API_KEY=your-jina-api-key-here
JINA_RERANKER_ENABLED=false

# =============================================================================
# OPTIONAL: MongoDB Configuration (for Multi-Writer System)
# =============================================================================
# Only needed if MULTI_WRITER_ENABLED=true
MULTI_WRITER_MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MULTI_WRITER_MONGODB_DATABASE_NAME=multi_writer_system

# =============================================================================
# OPTIONAL: System Configuration
# =============================================================================
# These have sensible defaults and usually don't need to be changed
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
DEBUG=false
RELOAD=false

# =============================================================================
# OPTIONAL: Feature Toggles
# =============================================================================
# Enable/disable specific features (all default to true)
TOOL_SYSTEM_ENABLED=true
AGENT_SYSTEM_ENABLED=true
GRADIO_ENABLED=true