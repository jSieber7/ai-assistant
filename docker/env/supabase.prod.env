# ===========================================
# SUPABASE PRODUCTION OVERRIDES
# ===========================================

# Logging
LOG_LEVEL=warn

# Feature Flags (be more restrictive in production)
ENABLE_EMAIL_SIGNUP=false # Set to true if you want public signups
ENABLE_PHONE_SIGNUP=false
ENABLE_ANONYMOUS_USERS=false
ENABLE_EMAIL_AUTOCONFIRM=false # Users should verify their email
DISABLE_SIGNUP=false # Change to true to disable all signups

# URLs (replace with your actual domain)
SITE_URL=https://yourdomain.com
API_EXTERNAL_URL=https://api.yourdomain.com
SUPABASE_PUBLIC_URL=https://api.yourdomain.com

# JWT (use a longer expiry in production)
JWT_EXPIRY=604800

# Postgrest
PGRST_DB_SCHEMAS=public,storage

# Functions
FUNCTIONS_VERIFY_JWT=true

# Add your production secrets here
# POSTGRES_PASSWORD=your_super_secret_password
# JWT_SECRET=your_super_secret_jwt
# OPENAI_API_KEY=your_openai_key