# Traefik Environment Configuration
# Development settings

# Traefik Configuration
TRAEFIK_API_INSECURE=true
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_ACCESS_LOG=true

# Dashboard Settings (Development Only)
TRAEFIK_DASHBOARD=true
TRAEFIK_DASHBOARD_PORT=8080

# Provider Settings
TRAEFIK_PROVIDERS_DOCKER=true
TRAEFIK_PROVIDERS_DOCKER_EXPOSEDBYDEFAULT=false
TRAEFIK_PROVIDERS_DOCKER_NETWORK=ai-assistant-network

# Entry Points
TRAEFIK_ENTRYPOINTS_WEB_ADDRESS=:80
TRAEFIK_ENTRYPOINTS_TRAEFIK_ADDRESS=:8080

# Metrics (Optional)
TRAEFIK_METRICS_PROMETHEUS=true

# Security Headers (Development - less strict)
TRAEFIK_SECURITY_HEADERS=true