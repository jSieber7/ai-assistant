FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY ../frontend/package*.json ./
RUN npm ci

# Copy the rest of the frontend code
COPY ../frontend/ .

# Expose the Vite dev server port
EXPOSE 5173

# Start the Vite dev server with host binding to allow external access
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]