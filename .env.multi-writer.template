# Multi-Writer/Checker System Configuration
# Copy this file to .env and customize the values below

# =============================================================================
# MULTI-WRITER SYSTEM SETTINGS
# =============================================================================

# Enable the multi-writer/checker system
# Set to 'true' to enable, 'false' to disable (default: false)
MULTI_WRITER_ENABLED=false

# =============================================================================
# FIRECRAWL API SETTINGS (Required for web scraping)
# =============================================================================

# Get your API key from https://www.firecrawl.dev/
MULTI_WRITER_FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# Firecrawl API base URL (usually don't need to change)
MULTI_WRITER_FIRECRAWL_BASE_URL=https://api.firecrawl.dev

# =============================================================================
# MONGODB SETTINGS (Required for data storage)
# =============================================================================

# MongoDB connection string
# Examples:
#   MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname
#   Local MongoDB: mongodb://localhost:27017
#   Docker MongoDB: mongodb://mongodb:27017
MULTI_WRITER_MONGODB_CONNECTION_STRING=mongodb://localhost:27017

# MongoDB database name (default: multi_writer_system)
MULTI_WRITER_MONGODB_DATABASE_NAME=multi_writer_system

# =============================================================================
# TEMPLATE SETTINGS
# =============================================================================

# Directory containing Jinja templates (default: templates)
MULTI_WRITER_TEMPLATE_DIR=templates

# Default template to use for rendering (default: article.html.jinja)
MULTI_WRITER_DEFAULT_TEMPLATE=article.html.jinja

# =============================================================================
# WRITER CONFIGURATION
# =============================================================================

# Default writers to use (comma-separated)
MULTI_WRITER_DEFAULT_WRITERS=technical_1,creative_1,analytical_1

# =============================================================================
# CHECKER CONFIGURATION
# =============================================================================

# Default checkers to use (comma-separated)
MULTI_WRITER_DEFAULT_CHECKERS=factual_1,style_1,structure_1

# =============================================================================
# QUALITY SETTINGS
# =============================================================================

# Minimum quality threshold (0-100, default: 70.0)
MULTI_WRITER_QUALITY_THRESHOLD=70.0

# Maximum iterations for quality improvement (default: 2)
MULTI_WRITER_MAX_ITERATIONS=2

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum concurrent workflows (default: 5)
MULTI_WRITER_MAX_CONCURRENT_WORKFLOWS=5

# Workflow timeout in seconds (default: 600)
MULTI_WRITER_WORKFLOW_TIMEOUT=600

# =============================================================================
# OUTPUT SETTINGS
# =============================================================================

# Directory for generated content (default: generated_content)
MULTI_WRITER_OUTPUT_DIR=generated_content

# Save intermediate results to database (default: true)
MULTI_WRITER_SAVE_INTERMEDIATE_RESULTS=true

# =============================================================================
# API SETTINGS
# =============================================================================

# API prefix for multi-writer endpoints (default: /v1/multi-writer)
MULTI_WRITER_API_PREFIX=/v1/multi-writer

# Enable asynchronous execution (default: true)
MULTI_WRITER_ENABLE_ASYNC_EXECUTION=true

# =============================================================================
# ADDITIONAL EXAMPLES
# =============================================================================

# Example for using a custom MongoDB Atlas connection:
# MULTI_WRITER_MONGODB_CONNECTION_STRING=mongodb+srv://user:password@cluster.mongodb.net/multi_writer_system?retryWrites=true&w=majority

# Example for using Docker MongoDB:
# MULTI_WRITER_MONGODB_CONNECTION_STRING=mongodb://mongodb:27017

# Example for custom quality settings:
# MULTI_WRITER_QUALITY_THRESHOLD=85.0
# MULTI_WRITER_MAX_ITERATIONS=3

# Example for custom template directory:
# MULTI_WRITER_TEMPLATE_DIR=/path/to/your/templates

# Example for custom output directory:
# MULTI_WRITER_OUTPUT_DIR=/path/to/output